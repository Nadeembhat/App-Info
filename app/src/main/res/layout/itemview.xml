<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="PackageName:"
        android:layout_marginTop="10dp"
        android:id="@+id/packagename_lable"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/packagename_lable"
        android:text="com.test.com"
        android:layout_marginStart="10dp"
        android:id="@+id/packagename"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/packagename_lable"
        android:text="Date:"
        android:id="@+id/Installed_Date_lable"/>

    <TextView
        android:id="@+id/Installed_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/packagename_lable"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/Installed_Date_lable"
        android:text="12:12:12"
        android:textSize="15sp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/Installed_Date"
        />
</RelativeLayout>